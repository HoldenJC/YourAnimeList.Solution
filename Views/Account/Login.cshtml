@{
  Layout = "_Layout";
}

@using YourAnimeList.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{
  <div class="row">
    <div class="col-sm-1">
    @Html.LabelFor(m => m.UserName)
    </div>
    <div class="col-sm-1">
    @Html.TextBoxFor(m => m.UserName)
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1">
    @Html.LabelFor(m => m.Password)
    </div>
    <div class="col-sm-1">
    @Html.TextBoxFor(m => m.Password)
    </div>
  </div>
  <div class="row">
    <div class="mt-2 col-sm-2">
      <input class="btn btn-primary border rounded" type="Submit" value="Log in" />
    </div>
  </div>

    
  <hr>
  <p>No Account?</p>
    @Html.ActionLink("Register Here", "Register")
}

<img class="logo-bg" src="https://raw.githubusercontent.com/AAWhang/project-illust/master/transParentCat.png">