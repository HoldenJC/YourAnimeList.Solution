@using YourAnimeList.Models
@model YourAnimeListContext

<h2 class="title searchTitle">@GlobalVar.CurrentUser.UserName's List</h2>
<hr class="container" />
<ul class="noBullet">
@{
    var x = ViewBag.Treasure.Count.ToString();
}
@if(x == "0")
{
    <h3 class="no-reco mr-5">No animes in your list currently!</h3>
}

    <div class="row">
        <div class="card-deck">
        @foreach (Anime anime in ViewBag.Treasure)
        {
            <div class="col-md-4 user-list"> 
                <div class="card mb-3 shadow rounded">
                    <div class="artContainer">
                    <a href="@Url.Action("Details", "Home", new { AnimeId = anime.Mal_Id })"><img class="coverArt rounded" src=@Html.DisplayFor(modelItem => anime.Image_Url)>
                    <div class="overlay rounded">
                        <div class="text">Click for Details</div>
                    </div></a>
                    </div>
                </div>        
            </div>

        }
        </div>
    </div>
</ul>