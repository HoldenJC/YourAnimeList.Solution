@model IEnumerable<YourAnimeList.Models.Anime>

<div class="title card border-0 mb-3 mt-0 pt-3">
<h4 class="mb-3">Search for Anime</h4>
<form asp-controller="Home" asp-action="Index">
    <p>
        <input class="animeSearch title shadow border-0" type="text" name="SearchString" placeholder="e.g. Naruto">
    </p>
</form>
</div>

<h2 class="title">@Model.First().Title / Similar Titles</h2>
<hr />
<ul class="noBullet">

    <div class="row">

        @foreach (var anime in Model)
        {
            <div class="col-md-4"> 
                <div class="artContainer">
                    <a href="@Url.Action("Details", "Home", new { AnimeId = anime.Mal_Id })"><img class="coverArt" src=@Html.DisplayFor(modelItem => anime.Image_Url)>
                    <div class="overlay">
                        <div class="text">Click for Details</div>
                    </div></a>
                </div>
                <li>Title: @Html.DisplayFor(modelItem => anime.Title)</li>
                <li>Synopsis: @Html.DisplayFor(modelItem => anime.Synopsis)</li>
            </div>
        }

    </div>
    
</ul>